{
  "name": "@logdna/tail-file",
  "version": "3.0.0",
  "description": "A node.js version of unix's `tail -f` command",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test:ci": "tools/test-ci.sh",
    "test": "tap",
    "lint": "eslint ./",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run --no-ci --branches ${BRANCH_NAME:-main}",
    "pretest": "npm run lint && npm run commitlint"
  },
  "files": [
    "lib/**",
    "index.js",
    "index.d.ts",
    "*.md",
    "LICENSE"
  ],
  "keywords": [
    "tail -f",
    "tail",
    "tail file",
    "logging",
    "streams",
    "tail stream"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">= 12"
  },
  "bugs": {
    "url": "https://github.com/logdna/tail-file-node/issues"
  },
  "private": false,
  "release": {
    "extends": "semantic-release-config-logdna",
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/logdna/tail-file-node"
  },
  "homepage": "https://github.com/logdna/tail-file-node",
  "author": {
    "name": "Darin Spivey",
    "email": "darin.spivey@mezmo.com"
  },
  "contributors": [
    {
      "name": "Darin Spivey",
      "email": "darin.spivey@mezmo.com"
    },
    {
      "name": "Jakub Jirutka",
      "email": "jakub@jirutka.cz"
    },
    {
      "name": "Ryan Mottley",
      "email": "ryan.mottley@mezmo.com"
    },
    {
      "name": "Laura Santamaria",
      "email": "dev@nimbinatus.com"
    }
  ],
  "license": "SEE LICENSE IN LICENSE",
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "node_modules/",
      "coverage/"
    ],
    "extends": [
      "logdna"
    ],
    "parserOptions": {
      "ecmaVersion": 2019
    }
  },
  "devDependencies": {
    "@logdna/commitlint-config": "^2.0.0",
    "eslint": "^8.18.0",
    "eslint-config-logdna": "^7.0.0",
    "semantic-release": "^17.4.7",
    "semantic-release-config-logdna": "^1.3.0",
    "tap": "^15.0.9",
    "tap-xunit": "^2.4.1"
  },
  "tap": {
    "100": true,
    "ts": false,
    "jsx": false,
    "check-coverage": true,
    "jobs": 1,
    "timeout": 60,
    "coverage-report": [
      "text",
      "text-summary",
      "json",
      "json-summary",
      "html"
    ],
    "reporter": "tap",
    "nyc-arg": [
      "--exclude=test/",
      "--exclude=tools",
      "--all"
    ],
    "files": [
      "test/**/*.js"
    ],
    "output-file": "coverage/.tap-output"
  },
  "commitlint": {
    "extends": [
      "@logdna/commitlint-config"
    ]
  }
}
